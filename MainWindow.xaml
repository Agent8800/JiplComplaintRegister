<Window x:Class="JiplComplaintRegister.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="JIPL Complaint Register" Height="720" Width="1180"
        Background="#F6F7FB">
    <Grid Margin="14">
        <TabControl>
            <!-- New Complaint -->
            <TabItem Header="New Complaint">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Border Background="White" CornerRadius="12" Padding="16" BorderBrush="#E2E8F0" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.ColumnSpan="2" FontSize="18" FontWeight="SemiBold"
                                       Text="Register New Complaint" Margin="0,0,0,14"/>

                            <TextBlock Grid.Row="1" Text="Name *" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="NameBox" Height="34"/>

                            <TextBlock Grid.Row="2" Text="Mobile *" VerticalAlignment="Center" Margin="0,10,0,0"/>
                            <TextBox Grid.Row="2" Grid.Column="1" x:Name="MobileBox" Height="34" Margin="0,10,0,0"/>

                            <TextBlock Grid.Row="3" Text="Location *" VerticalAlignment="Center" Margin="0,10,0,0"/>
                            <TextBox Grid.Row="3" Grid.Column="1" x:Name="LocationBox" Height="34" Margin="0,10,0,0"/>

                            <TextBlock Grid.Row="4" Text="Department *" VerticalAlignment="Center" Margin="0,10,0,0"/>
                            <TextBox Grid.Row="4" Grid.Column="1" x:Name="DepartmentBox" Height="34" Margin="0,10,0,0"/>

                            <TextBlock Grid.Row="5" Text="Product *" VerticalAlignment="Center" Margin="0,10,0,0"/>
                            <TextBox Grid.Row="5" Grid.Column="1" x:Name="ProductBox" Height="34" Margin="0,10,0,0"/>

                            <TextBlock Grid.Row="6" Text="Serial Number *" VerticalAlignment="Center" Margin="0,10,0,0"/>
                            <TextBox Grid.Row="6" Grid.Column="1" x:Name="SerialBox" Height="34" Margin="0,10,0,0"/>

                            <TextBlock Grid.Row="7" Text="Complaint Details" VerticalAlignment="Top" Margin="0,10,0,0"/>
                            <TextBox Grid.Row="7" Grid.Column="1" x:Name="DetailsBox" Height="120"
                                     Margin="0,10,0,0" TextWrapping="Wrap" AcceptsReturn="True"/>

                            <Button Content="Save Complaint" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                    Width="160" Height="40" Margin="0,18,0,0"
                                    Background="#2563EB" Foreground="White" BorderThickness="0"
                                    Click="SaveComplaint_Click"/>
                        </Grid>
                    </Border>
                </ScrollViewer>
            </TabItem>

            <!-- Complaints -->
            <TabItem Header="Complaints">
                <Grid Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="White" CornerRadius="12" Padding="12"
                            BorderBrush="#E2E8F0" BorderThickness="1">
                        <DockPanel LastChildFill="True">
                            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                <ComboBox x:Name="StatusFilter" Width="140" SelectedIndex="0" Margin="0,0,10,0">
                                    <ComboBoxItem Content="All"/>
                                    <ComboBoxItem Content="Pending"/>
                                    <ComboBoxItem Content="Completed"/>
                                </ComboBox>
                                <DatePicker x:Name="FromDate" Width="140" Margin="0,0,10,0"/>
                                <DatePicker x:Name="ToDate" Width="140" Margin="0,0,10,0"/>
                                <TextBox x:Name="SearchBox" Width="360" Height="30"
                                         VerticalContentAlignment="Center"
                                         Text=""/>
                            </StackPanel>
                            <Button DockPanel.Dock="Right" Content="Apply" Width="110" Height="34"
                                    Background="#2563EB" Foreground="White" BorderThickness="0"
                                    Click="ApplyFilters_Click"/>
                        </DockPanel>
                    </Border>

                    <DataGrid Grid.Row="1" x:Name="ComplaintsGrid" Margin="0,10,0,10"
                              AutoGenerateColumns="False" IsReadOnly="True"
                              AlternatingRowBackground="#F8FAFC"
                              HeadersVisibility="Column" GridLinesVisibility="Horizontal">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Complaint No" Binding="{Binding ComplaintNo}" Width="220"/>
                            <DataGridTextColumn Header="Created" Binding="{Binding CreatedAt}" Width="160"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="140"/>
                            <DataGridTextColumn Header="Mobile" Binding="{Binding Mobile}" Width="120"/>
                            <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="140"/>
                            <DataGridTextColumn Header="Department" Binding="{Binding Department}" Width="140"/>
                            <DataGridTextColumn Header="Product" Binding="{Binding Product}" Width="140"/>
                            <DataGridTextColumn Header="Serial No" Binding="{Binding SerialNo}" Width="120"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                            <DataGridTextColumn Header="Completed" Binding="{Binding CompletedAt}" Width="160"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Edit" Width="110" Height="36" Margin="0,0,10,0" Click="Edit_Click"/>
                        <Button Content="Toggle Pending/Completed" Width="200" Height="36" Margin="0,0,10,0" Click="Toggle_Click"/>
                        <Button Content="Export Excel" Width="130" Height="36" Margin="0,0,10,0" Click="ExportExcel_Click"/>
                        <Button Content="Export PDF" Width="130" Height="36" Click="ExportPdf_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Monthly Report -->
            <TabItem Header="Monthly Report">
                <Grid Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="White" CornerRadius="12" Padding="12"
                            BorderBrush="#E2E8F0" BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <ComboBox x:Name="ReportMonth" Width="160" SelectedIndex="{Binding}">
                                <ComboBoxItem Content="January"/><ComboBoxItem Content="February"/><ComboBoxItem Content="March"/>
                                <ComboBoxItem Content="April"/><ComboBoxItem Content="May"/><ComboBoxItem Content="June"/>
                                <ComboBoxItem Content="July"/><ComboBoxItem Content="August"/><ComboBoxItem Content="September"/>
                                <ComboBoxItem Content="October"/><ComboBoxItem Content="November"/><ComboBoxItem Content="December"/>
                            </ComboBox>
                            <TextBox x:Name="ReportYear" Width="100" Margin="10,0,0,0" Height="30" VerticalContentAlignment="Center" Text="2025"/>
                            <ComboBox x:Name="ReportStatus" Width="140" Margin="10,0,0,0" SelectedIndex="0">
                                <ComboBoxItem Content="All"/>
                                <ComboBoxItem Content="Pending"/>
                                <ComboBoxItem Content="Completed"/>
                            </ComboBox>
                            <Button Content="Generate" Width="120" Margin="10,0,0,0"
                                    Background="#2563EB" Foreground="White" BorderThickness="0"
                                    Click="GenerateReport_Click"/>
                            <Button Content="Export Excel" Width="130" Margin="10,0,0,0" Click="ReportExportExcel_Click"/>
                            <Button Content="Export PDF" Width="130" Margin="10,0,0,0" Click="ReportExportPdf_Click"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Grid.Row="1" x:Name="ReportSummary" Margin="4,10,0,10" FontWeight="SemiBold"/>

                    <DataGrid Grid.Row="2" x:Name="ReportGrid" AutoGenerateColumns="False" IsReadOnly="True"
                              AlternatingRowBackground="#F8FAFC" GridLinesVisibility="Horizontal">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Complaint No" Binding="{Binding ComplaintNo}" Width="220"/>
                            <DataGridTextColumn Header="Created" Binding="{Binding CreatedAt}" Width="160"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="140"/>
                            <DataGridTextColumn Header="Mobile" Binding="{Binding Mobile}" Width="120"/>
                            <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="140"/>
                            <DataGridTextColumn Header="Department" Binding="{Binding Department}" Width="140"/>
                            <DataGridTextColumn Header="Product" Binding="{Binding Product}" Width="140"/>
                            <DataGridTextColumn Header="Serial No" Binding="{Binding SerialNo}" Width="120"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                            <DataGridTextColumn Header="Completed" Binding="{Binding CompletedAt}" Width="160"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
